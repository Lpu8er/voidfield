{% extends 'external-base.html.twig' %}
{% block content %}
    <div class="container">
        <h1>
            Connexion
        </h1>
        <form action="{{ path('login') }}" method="post">
            <div class="form-group">
                <label for="loginUsername">Identifiant utilisateur</label>
                <input type="text"
                       name="_username"
                       required="required"
                       class="form-control"
                       tabindex="0"
                       id="loginUsername"
                       placeholder="Identifiant utilisateur" />
                <a href="{{ path('register') }}" class="form-text" tabindex="50">
                    Pas encore inscrit ?
                </a>
            </div>
            <div class="form-group">
                <label for="loginPwd">Mot de passe</label>
                <input type="password"
                       name="_password"
                       required="required"
                       class="form-control"
                       tabindex="0"
                       id="loginPwd"
                       placeholder="Mot de passe" />
                <a href="{{ path('pwd') }}" class="form-text" tabindex="50">
                    Mot de passe oubli√© ?
                </a>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />
            <button type="submit" class="btn btn-primary" tabindex="0">Connexion</button>
        </form>
    </div>
{% endblock %}