{% extends 'internal-base.html.twig' %}
{% block content %}
    <div class="card-columns">
        <div class="card text-light" style="background-image: url('{{ asset('images/earth.jpg') }}');">
            <div class="card-body">
                <h4 class="card-title">
                    Colonies
                </h4>
            </div>
            <ul class="list-group list-group-flush">
                {% for colony in colonies %}
                <li class="list-group-item"
                    style="background-color: rgba(0, 0, 0, 0.6);">
                    <h5>
                        <a href="{{ path('colony_detail', {'cid': colony.id}) }}">{{ colony.name }}</a>
                    </h5>
                    <p>
                        Satisfaction
                        <meter value="{{ colony.satisfaction - colony.insatisfaction }}"
                               min="-100"
                               max="100"
                               low="10"
                               optimum="100">
                        {{ colony.satisfaction }}%
                        vs
                        {{ colony.insatisfaction }}%
                        </meter>
                    </p>
                </li>{% endfor %}
            </ul>
        </div>
        <div class="card">
            <img class="card-img-top" src=".../100px200/" alt="Card image cap" />
            <div class="card-body">
                <h4 class="card-title">
                    Flottes
                </h4>
            </div>
            <ul class="list-group list-group-flush">
                {% for fleet in fleets %}
                <li class="list-group-item">
                    <h5>
                        <a href=""></a>
                    </h5>
                    <p>
                        SSSS
                    </p>
                </li>{% else %}
                <li class="list-group-item">
                    <h5>
                        Aucune flotte
                    </h5>
                </li>
                {% endfor %}
            </ul>
        </div>
    </div>
    Colonies
    
    Flottes
    
    Production
    
    Recherches
    
    Construction
    
{% endblock %}