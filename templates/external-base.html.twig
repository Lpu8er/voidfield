{% extends 'base.html.twig' %}
{% block body %}
    <header class="">
        <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
            <a class="navbar-brand"
               href="{{ path('root') }}"
               title="Voidfield">ðŸ•³</a>
            <button class="navbar-toggler"
                    type="button"
                    data-toggle="collapse"
                    data-target="#mainMenu"
                    aria-controls="mainMenu"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse"
                 id="mainMenu">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link"
                           href="{{ path('root') }}">Voidfield{% if _current is not defined or 'home' == _current %}<span class="sr-only">(current)</span>{% endif %}</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link"
                           href="#">Informations{% if _current is defined and 'info' == _current %}<span class="sr-only">(current)</span>{% endif %}</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link"
                           href="{{ path('register') }}">Inscription{% if _current is defined and 'register' == _current %}<span class="sr-only">(current)</span>{% endif %}</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    {% if app.flashes is not empty or _messages is not empty %}
        {% include 'comps/toast-area.html.twig' %}
    {% endif %}
    <section id="mainContent">
        {% block content %}{% endblock %}
    </section>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src='https://www.google.com/recaptcha/api.js'></script>
{% endblock %}