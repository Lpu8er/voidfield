<div class="toast {% include 'comps/alert-cls.html.twig' with {'_p': mtype} %}"
     role="alert"
     aria-live="assertive"
     aria-atomic="true"{% if vfor is defined %}v-for="toast in {{ vfor }}"{% endif %}>
    <div class="toast-header">
        {% include 'comps/theme-square.svg.twig' with {'_p': mtype} %}
        <strong class="mr-auto">{% if mtype in ['ko', 'error', 'danger'] %}Erreur
        {% elseif mtype in ['warn', 'warning'] %}Alerte
        {% elseif mtype in ['info', 'notice'] %}Information
        {% elseif mtype in ['ok', 'success'] %}Succ√®s
        {% endif %}</strong>
        <em class="text-muted toast-when">
            {% if mdate is defined and mdate is not empty %}{{ mdate|date(param(app.user, 'date.format')) }}{% endif %}
            {% if tdate is defined and tdate is not empty %}{{ tdate }}{% endif %}
        </em>
        <button type="button"
                class="btn-close"
                data-bs-dismiss="toast"
                aria-label="Close"></button>
    </div>
    <div class="toast-body {% include 'comps/alert-cls.html.twig' with {'_p': mtype} %}">
        {{ message }}
    </div>
</div>